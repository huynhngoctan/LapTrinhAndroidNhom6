<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_ind_24" />

            <TextView
                android:id="@+id/nameFood"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_menu"
                android:text="Thức ăn xanh"
                />

            <ImageButton
                android:id="@+id/btnDiscount"
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:layout_below="@+id/nameFood"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="29dp"
                android:layout_toRightOf="@+id/img"
                android:src="@drawable/ic_baseline_maximize_24" />

            <TextView
                android:id="@+id/quantity"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameFood"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="29dp"
                android:layout_toRightOf="@+id/btnDiscount"
                android:text="1"
                android:textColor="@color/color_navagation"
                android:textSize="20dp">

            </TextView>

            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="27dp"
                android:layout_height="26dp"
                android:layout_below="@+id/nameFood"
                android:layout_marginLeft="219dp"
                android:layout_marginTop="28dp"
                android:layout_toRightOf="@+id/img"
                android:src="@drawable/ic_outline_gamepad_24" />

            <TextView
                android:id="@+id/price"
                android:textSize="25dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.000"
                android:textColor="#F80A0A"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>